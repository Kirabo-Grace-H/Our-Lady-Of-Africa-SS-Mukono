<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/editpass"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="17dp"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="Password"
        android:background="@drawable/shapeback"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnsign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editemail" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="41dp"
        android:drawableLeft="@drawable/at"
        android:ems="10"
        android:hint="Email"
        android:background="@drawable/shapeback"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:onClick="signup"
        android:text="SIGNUP"
        android:textColor="@color/blue"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnlogin2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editpass" />

    <TextView
        android:id="@+id/tvalready"
        android:layout_width="192dp"
        android:layout_height="43dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="16dp"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnlogin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsign" />

    <Button
        android:id="@+id/btnlogin2"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:onClick="loginsign"
        android:text="LOGIN"
        android:textColor="@color/blue"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvalready"
        app:layout_constraintTop_toBottomOf="@+id/btnsign" />

</androidx.constraintlayout.widget.ConstraintLayout>